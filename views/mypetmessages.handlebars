<div class="card mb-3 mt-3">
  <div class="row g-0">
    <div class="col-md-4">
      <a href="/mypets"><img src="/images/{{picture}}.jpg" class="img-fluid rounded-start" alt="Pet image"></a>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">My Name: {{petName}}</h5>
        <h5 class="card-title">My Age: {{age}}</h5>
        <h5 class="card-title">My Breed: {{breed}}</h5>
        <h5 class="card-title">About Me: {{description}}</h5>
        <p class="card-text"></p>
        <p class="card-text"><small class="text-muted"></small></p>
      </div>
    </div>
  </div>
</div>

{{#each messages}}

<div class="card border-primary mb-3">
  <div class="card-body text-primary">
    <p class="card-text fst-italic text-end">{{message_text}}</p>
  </div>
  <div class="card-header text-end"><span class="userCommentedId"><strong>{{username}}</strong></span> {{format_date
    createdAt}}</div>
</div>
{{/each}}
