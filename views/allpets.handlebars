{{!-- {{#if allPets}}
<h1>See all our pets!</h1>
{{#else }}
<h1>Currently no pets available</h1>
{{/if}} --}}
<div class="row justify-content-evenly">
{{#each allPets}}
  {{!-- <div class="col-sm-5 my-5"> --}}
    <div class="card m-2" style="width: 18rem;">
      <a href="allpets/pet/{{id}}"><img src="../images/{{picture}}.jpg" class="card-img-top" alt="picture of animal"></a>
      <div class="card-body">
        <h5 class="card-title">Say hello to  {{petName}}</h5>
        <p class="card-text">{{description}}.</p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{petType}}, {{breed}}</li>
        <li class="list-group-item">Age: {{age}}</li>
        <li class="list-group-item">Contact <strong>{{user.firstName}}</strong> to get more info</li>

      </ul>
      <div class="card-body">
        <a href= "mailto: {{user.email}}" class="card-link">Send Email</a>
      </div>
    </div>
  {{!-- </div> --}}
{{/each}}
</div>